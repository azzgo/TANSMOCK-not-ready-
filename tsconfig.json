{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "typeRoots" : ["./node_modules/@types", "./typings"],
    "lib": [
      "es6",
      "es7"
    ],
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"]
}
